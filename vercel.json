{
  "version": 2,
  "builds": [
    { "src": "/generate.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/generate",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Content-Type, Accept",
        "Access-Control-Allow-Methods": "POST, OPTIONS"
      },
      "dest": "/generate.js"
    },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}